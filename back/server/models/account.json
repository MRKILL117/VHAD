{
  "name": "Account",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "restorePasswordPin": {
      "type": "string"
    },
    "firstTimeConfiguration": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "AccountToken",
      "foreignKey": "userId"
    },
    "role": {
      "type": "hasOne",
      "model": "RoleMapping",
      "foreignKey": "principalId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "LogIn",
        "RegisterUser",
        "GenerateRestorePasswordPinAndSendByMail",
        "CheckVerificationCode",
        "RestorePassword"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "LogOut",
        "FirstTimeConfiguration",
        "UpdateAccount"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Admin",
      "permission": "ALLOW",
      "property": [
        "GetRoles",
        "CreateUserWithRole",
