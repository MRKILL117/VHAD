{
  "name": "Order",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "status",
      "user",
      "seller",
      "address",
      {
        "products": "product"
      }
    ]
  },
  "properties": {
    "creationDate": {
      "type": "string",
      "required": true
    },
    "total": {
      "type": "number",
      "required": true,
      "dataType": "decimal",
      "precision": 10,
      "scale": 2,
      "default": 0
    },
    "paymentMethod": {
      "type": "string",
      "required": false
    },
    "conektaId": {
      "type": "string",
      "required": false
    },
    "conektaOrder": {
      "type": "object",
      "required": false,
      "default": null
    },
    "clientName": {
      "type": "string",
      "required": false,
      "default": null
    },
    "isCancelled": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "products": {
      "type": "hasMany",
      "model": "OrderProduct",
      "foreignKey": "orderId",
      "options": {
        "nestRemoting": true
      }
    },
    "user": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "userId",
      "options": {
        "nestRemoting": true
      }
    },
    "seller": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "sellerId",
      "options": {
        "nestRemoting": true
      }
    },
    "status": {
      "type": "belongsTo",
      "model": "OrderStatus",
      "foreignKey": "statusId",
      "options": {
        "nestRemoting": true
      }
    },
    "address": {
      "type": "belongsTo",
      "model": "Address",
      "foreignKey": "addressId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "CreateOne",
        "GetAll",
        "CancelOrder"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Admin",
      "permission": "ALLOW",
      "property": [
        "GetAll",
        "GetById",
        "UpdateSeller",
        "ChangeStatus"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Seller",
      "permission": "ALLOW",
      "property": [
        "GetAll",
        "GetById",
        "UpdateSeller",
        "ChangeStatus"
      ]
    }
  ],
  "methods": {
    "CreateOne": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "required": true,
          "description": "",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "cartProducts",
          "type": "array",
          "required": true,
          "description": ""
        },
        {
          "arg": "address",
          "type": "object",
          "required": false,
          "description": ""
        },
        {
          "arg": "payment",
          "type": "object",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "newOrder",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "post"
        }
      ]
    },
    "GetAll": {
      "accepts": [
        {
          "arg": "statusIds",
          "type": "array",
          "required": false,
          "description": ""
        },
        {
          "arg": "startDate",
          "type": "string",
          "required": false,
          "description": ""
        },
        {
          "arg": "endDate",
          "type": "string",
          "required": false,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "orders",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "get"
        },
        {
          "path": "/FilteredByStatusIds/:statusIds",
          "verb": "get"
        },
        {
          "path": "/FilteredByStatusIds/:statusIds/From/:startDate/To/:endDate",
          "verb": "get"
        }
      ]
    },
    "GetById": {
      "accepts": [
        {
          "arg": "orderId",
          "type": "number",
          "root": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "order",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/:orderId",
          "verb": "get"
        }
      ]
    },
    "prototype.UpdateSeller": {
      "accepts": [
        {
          "arg": "sellerId",
          "type": "number",
          "root": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "order",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/AttendedBy",
          "verb": "patch"
        }
      ]
    },
    "prototype.ChangeStatus": {
      "accepts": [
        {
          "arg": "status",
          "type": "any",
          "required": false,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "orderSaved",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/ChangeStatus",
          "verb": "patch"
        }
      ]
    },
    "CancelOrder": {
      "accepts": [
        {
          "arg": "orderId",
          "type": "number",
          "required": false,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "orderCancelled",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/:orderId/Cancel",
          "verb": "delete"
        }
      ]
    }
  }
}
