{
  "name": "Product",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "key": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "isDeleted": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "images": {
      "type": "hasAndBelongsToMany",
      "model": "Document",
      "foreignKey": "productId",
      "throughTable": "ProductImage",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Admin",
      "permission": "ALLOW",
      "property": [
        "CreateProduct",
        "GetProducts",
        "UpdateProduct",
        "DeleteProduct"
      ]
    }
  ],
  "methods": {
    "CreateProduct": {
      "accepts": [
        {
          "arg": "product",
          "type": "object",
          "required": true,
          "description": "{name, key, description}"
        }
      ],
      "returns": [
        {
          "arg": "newProduct",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "post"
        }
      ]
    },
    "GetProducts": {
      "accepts": [],
      "returns": [
        {
          "arg": "products",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "get"
        }
      ]
    },
    "prototype.UpdateProduct": {
      "accepts": [
        {
          "arg": "product",
          "type": "object",
          "required": true,
          "description": "{name, key, description}"
        }
      ],
      "returns": [
        {
          "arg": "productUpdated",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "patch"
        }
      ]
    },
    "prototype.DeleteProduct": {
      "accepts": [],
      "returns": [
        {
          "arg": "productDeleted",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "delete"
        }
      ]
    }
  }
}
