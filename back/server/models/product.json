{
  "name": "Product",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": ["images", "category", "subcategory"]
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "key": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "number",
      "required": true,
      "dataType": "decimal",
      "precision": 10,
      "scale": 2,
      "default": 0
    },
    "offerPrice": {
      "type": "number",
      "required": false,
      "dataType": "decimal",
      "precision": 10,
      "scale": 2,
      "default": 0
    },
    "stock": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "description": {
      "type": "string"
    },
    "creationDate": {
      "type": "string"
    },
    "modified": {
      "type": "string"
    },
    "activeOffer": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "isVisible": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "isDeleted": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "images": {
      "type": "hasAndBelongsToMany",
      "model": "Document",
      "foreignKey": "productId",
      "throughTable": "ProductImage",
      "options": {
        "nestRemoting": true
      }
    },
    "orders": {
      "type": "hasAndBelongsToMany",
      "model": "Order",
      "foreignKey": "productId",
      "throughTable": "OrderProduct",
      "options": {
        "nestRemoting": true
      }
    },
    "category": {
      "type": "belongsTo",
      "model": "Category",
      "foreignKey": "categoryId",
      "options": {
        "nestRemoting": true
      }
    },
    "subcategory": {
      "type": "belongsTo",
      "model": "Subcategory",
      "foreignKey": "subcategoryId",
      "options": {
        "nestRemoting": true
      }
    },
    "filters": {
      "type": "hasMany",
      "model": "ProductFilter",
      "foreignKey": "productId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "GetProducts",
        "GetOfferedProducts"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Admin",
      "permission": "ALLOW",
      "property": [
        "CreateProduct",
        "UpdateProduct",
        "DeleteProduct",
        "ChangeVisibility"
      ]
    }
  ],
  "methods": {
    "CreateProduct": {
      "accepts": [
        {
          "arg": "product",
          "type": "object",
          "required": true,
          "description": "{name, key, description}"
        }
      ],
      "returns": [
        {
          "arg": "newProduct",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "post"
        }
      ]
    },
    "GetProducts": {
      "accepts": [
        {
          "arg": "filterText",
          "type": "string",
          "required": false,
          "description": ""
        },
        {
          "arg": "categoriesIds",
          "type": "array",
          "required": false,
          "description": ""
        },
        {
          "arg": "categoriesIds",
          "type": "array",
          "required": false,
          "description": ""
        },
        {
          "arg": "asCostumer",
          "type": "boolean",
          "required": false,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "products",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "get"
        },
        {
          "path": "/ThatIncludes/:filterText/AndCategories/:categoriesIds",
          "verb": "get"
        },
        {
          "path": "/AsCostumer/:asCostumer",
          "verb": "get"
        }
      ]
    },
    "GetOfferedProducts": {
      "accepts": [
        {
          "arg": "filterText",
          "type": "string",
          "required": false,
          "description": ""
        },
        {
          "arg": "categoriesIds",
          "type": "array",
          "required": false,
          "description": ""
        },
        {
          "arg": "subcategoriesIds",
          "type": "array",
          "required": false,
          "description": ""
        },
        {
          "arg": "asCostumer",
          "type": "boolean",
          "required": false,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "products",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/Offered",
          "verb": "get"
        },
        {
          "path": "/OfferedThatIncludes/:filterText/AndCategories/:categoriesIds/AndSubcategories/:subcategoriesIds/AsCostumer/:asCostumer",
          "verb": "get"
        },
        {
          "path": "/OfferedAsCostumer/:asCostumer",
          "verb": "get"
        }
      ]
    },
    "prototype.UpdateProduct": {
      "accepts": [
        {
          "arg": "product",
          "type": "object",
          "required": true,
          "description": "{name, key, description}"
        }
      ],
      "returns": [
        {
          "arg": "productUpdated",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "patch"
        }
      ]
    },
    "prototype.DeleteProduct": {
      "accepts": [],
      "returns": [
        {
          "arg": "productDeleted",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/",
          "verb": "delete"
        }
      ]
    },
    "prototype.ChangeVisibility": {
      "accepts": [
        {
          "arg": "isVisible",
          "type": "boolean",
          "root": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "productDeleted",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/ChangeVisibility",
          "verb": "patch"
        }
      ]
    }
  }
}
